extend ../layouts/common
block content
  h1 Products
  .row
    each product in products
      .col-md-4.col-lg-3
        .card(style='width: 100%; margin-bottom: 15px;')
          img.card-img-top(src=product.image, alt="image")
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='#') More
  if (pagination)
    .row
      .col-md-12
        nav(aria-label='Page navigation example')
          ul.pagination
            li.page-item
              a.page-link(href='#') Previous
              for (int i = 0; i < pagination.totalPage; i++)
                li.page-item
                a.page-link(href='#')= i + 1
              a.page-link(href='#') Next
