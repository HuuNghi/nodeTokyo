extend ./layouts/common
block content
  h1 Products
  .row
    each product in products
      .col-md-4
        .card(style='width: 18rem;')
          img.card-img-top(src=product.image, alt="image")
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='#') More
