extend ../layouts/common
block content
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger=error
  form(action="/users/create", method="POST")
    .form-group
      label(for='name') Name
      input.form-control(type='text', placeholder='Your name', name="name", id="name", value=values ? values.name : "")
    .form-group
      label(for='phone') Phone
      input.form-control(type='text', placeholder='Your phone', name="phone", id="phone", value=values ? values.phone : "")
    button.btn.btn-primary Submit
