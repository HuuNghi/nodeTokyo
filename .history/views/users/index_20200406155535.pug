extend ../layouts/common
block content
  div(class="controller")
    h1 User List
      a(href="/users/create", class="btn btn-primary") New User
    form(action="/users/search", method="GET", class="d-flex")
      input(type="text", name="q", value=q, class="form-control mr-2")
      button(class="btn btn-success") Search
    ul
      each user in users
        li
          span= user.name
          span &nbsp;
          a(href="/users/" + user.id) View
