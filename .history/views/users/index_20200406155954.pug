extend ../layouts/common
block content
  div(class="controller")
    h1 User List
      a(href="/users/create", class="btn btn-primary ml-4") New User
    form(action="/users/search", method="GET", class="d-flex")
      input(type="text", name="q", value=q, class="form-control mr-2")
      button(class="btn btn-success") Search
    
    table
      thead
        th Name
        th Phone
        th Action
      tbody
        each user in users
          tr
            td= user.name
            td= user.phone
            td
              a(href="/users/" + user.id, class="btn btn-light") View
            
