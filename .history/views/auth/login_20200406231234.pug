extend ../layouts/common
block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger=error
  form(action="/auth/login", method="POST")
    .form-group
      label(for='email') Name
      input.form-control(type='email', placeholder='Your email', name="email", id="email", value=values ? values.email : "")
    .form-group
      label(for='password') Password
      input.form-control(type='password', placeholder='Your password', name="password", id="password", value=values ? values.password : "")
    button.btn.btn-primary login
